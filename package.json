{
  "name": "kaven-boilerplate",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "predev": "bash scripts/cleanup-dev.sh",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "db:generate": "npx tsx kaven-cli/src/index.ts db generate && npx prisma generate --schema packages/database/prisma/schema.prisma",
    "db:migrate": "npx prisma migrate dev",
    "db:seed": "npx tsx prisma/seed.ts",
    "db:studio": "npx prisma studio",
    "docker:up": "docker compose -f infra/docker-compose.yml up -d",
    "docker:down": "docker compose -f infra/docker-compose.yml down"
  },
  "devDependencies": {
    "@types/node-cron": "^3.0.11",
    "kill-port": "^2.0.1",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.15.4",
  "dependencies": {
    "@prisma/client": "5.22.0",
    "node-cron": "^3.0.3",
    "systeminformation": "^5.30.0"
  },
  "pnpm": {
    "overrides": {
      "preact": "^10.25.0",
      "qs": "^6.14.0",
      "inflight": "^1.0.6"
    }
  }
}
