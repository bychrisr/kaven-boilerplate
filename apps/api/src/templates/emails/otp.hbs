{{#> main}}
  <h1 style="color: {{theme.colors.text}}; margin: 0 0 24px 0; font-size: 24px; font-weight: 700;">
    {{t "emails.otp.title"}}
  </h1>
  
  <p style="color: {{theme.colors.text}}; font-size: 16px; line-height: 1.6; margin: 0 0 24px 0;">
    {{t "common.greeting" name=name}}
  </p>
  
  <p style="color: {{theme.colors.text}}; font-size: 16px; line-height: 1.6; margin: 0 0 32px 0;">
    {{t "emails.otp.content"}}
  </p>
  
  <div style="background-color: {{theme.colors.background.neutral}}; border-radius: 8px; padding: 24px; text-align: center; margin: 32px 0;">
    <span style="font-family: {{theme.typography.fontFamilyMono}}; font-size: 32px; font-weight: 700; letter-spacing: 8px; color: {{theme.colors.primary}};">
      {{code}}
    </span>
  </div>

  <p style="color: {{theme.colors.textMuted}}; font-size: 14px; text-align: center; margin: 0 0 32px 0;">
    {{t "emails.otp.validity"}}
  </p>

  {{> alert type="warning" title="Segurança" message="Nunca compartilhe este código com ninguém, nem mesmo com o suporte do Kaven." }}
{{/main}}
