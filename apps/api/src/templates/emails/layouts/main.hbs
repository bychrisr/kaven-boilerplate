<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@500;600;700&family=DM+Sans:wght@400;500;700&display=swap" rel="stylesheet">
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: {{theme.typography.fontFamily}};
      color: {{theme.colors.text}};
      background-color: #f4f4f4;
    }
    h1, h2, h3, h4, h5, h6 {
      font-family: {{theme.typography.headingFont}};
    }
  </style>
</head>
<body style="margin: 0; padding: 0; font-family: {{theme.typography.fontFamily}}; background-color: #f4f4f4;">
  <table width="100%" cellpadding="0" cellspacing="0" style="background-color: #f4f4f4; padding: 40px 20px;">
    <tr>
      <td align="center">
        <!-- Card Container -->
        <table width="600" cellpadding="0" cellspacing="0" style="background-color: {{theme.colors.surface}}; border-radius: 16px; overflow: hidden; box-shadow: 0 4px 20px rgba(0,0,0,0.05);">
          
          <!-- Header Partial -->
          <tr>
            <td style="padding: 0;">
              {{> header }}
            </td>
          </tr>

          <!-- Content Injection -->
          <tr>
            <td style="padding: 40px;">
              {{> @partial-block }}
            </td>
          </tr>
          
          <!-- Footer Partial -->
          <tr>
            <td style="padding: 0;">
              {{> footer }}
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
</body>
</html>

