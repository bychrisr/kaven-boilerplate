{{#> main}}
  <h1 style="color: {{theme.colors.text}}; margin: 0 0 24px 0; font-size: 24px; font-weight: 700;">
    {{t "emails.verification.title"}}
  </h1>
  
  <p style="color: {{theme.colors.text}}; font-size: 16px; line-height: 1.6; margin: 0 0 24px 0;">
    {{t "common.greeting" name=name}}
  </p>
  
  <p style="color: {{theme.colors.text}}; font-size: 16px; line-height: 1.6; margin: 0 0 32px 0;">
    {{t "emails.verification.content"}}
  </p>
  
  {{> button url=verificationUrl label=(t "emails.verification.cta") }}

  {{> alert type="info" message=(t "emails.verification.securityNote") }}

  <p style="color: {{theme.colors.textMuted}}; font-size: 14px; margin-top: 24px;">
    {{t "emails.verification.orLink"}} <br>
    <a href="{{verificationUrl}}" style="color: {{theme.colors.primary}};">{{verificationUrl}}</a>
  </p>
{{/main}}
