# Database
DATABASE_URL="postgresql://kaven:kaven_dev_password@localhost:5432/kaven_dev"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT & Security (CHANGE IN PRODUCTION!)
JWT_SECRET="your-super-secret-jwt-key-with-at-least-32-characters-long"
JWT_EXPIRES_IN="2h"
REFRESH_TOKEN_SECRET="your-super-secret-refresh-key-with-at-least-32-characters-long"
ENCRYPTION_KEY="your-super-secret-encryption-key-with-at-least-32-characters-long"

# Server
NODE_ENV="development"
PORT=8000
CORS_ORIGIN="http://localhost:3000"
FRONTEND_URL="http://localhost:3000"
RATE_LIMIT_MAX=100
LOG_LEVEL="info"

# App Config
MULTI_TENANT_MODE="true"

# Stripe (optional)
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# ============================================
# EMAIL CONFIGURATION
# ============================================
# Note: Email providers are now configured via Admin Panel (Platform Settings > Integrations)
# These env vars are fallbacks for development or initial setup

# Email Provider (RESEND, POSTMARK, AWS_SES, SMTP)
EMAIL_PROVIDER="SMTP"

# Resend (Recommended - https://resend.com)
RESEND_API_KEY=""
RESEND_WEBHOOK_SECRET=""

# Postmark (Alternative - https://postmarkapp.com)
POSTMARK_SERVER_TOKEN=""
POSTMARK_WEBHOOK_SECRET=""

# AWS SES (Enterprise - https://aws.amazon.com/ses)
AWS_SES_ACCESS_KEY_ID=""
AWS_SES_SECRET_ACCESS_KEY=""
AWS_SES_REGION="us-east-1"

# SMTP Fallback (MailHog for dev)
SMTP_HOST="localhost"
SMTP_PORT=1025
SMTP_SECURE="false"
SMTP_USER=""
SMTP_PASS=""

# Email Domains (configurable via UI)
EMAIL_DOMAIN_TRANSACTIONAL="auth.kaven.site"
EMAIL_DOMAIN_MARKETING="mail.kaven.site"
EMAIL_FROM_NAME="Kaven Platform"
EMAIL_FROM="noreply@auth.kaven.site"

# Email Features
EMAIL_TRACK_OPENS="true"
EMAIL_TRACK_CLICKS="true"
EMAIL_DRY_RUN="false" # Set to true to prevent actual sending (testing)
EMAIL_USE_QUEUE="true" # Use async queue for sending

# Rate Limiting
EMAIL_DAILY_LIMIT=10000
EMAIL_HOURLY_LIMIT=1000

# Google Maps (Frontend - Next.js)
# Get your API key at: https://console.cloud.google.com/
# Enable Places API for autocomplete to work
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
